@model IEnumerable<CapstoneProject.Models.Course>

@{
    ViewBag.Title = "Courses";
}
@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>Courses</h2>
@using (Html.BeginForm("Sort", "Courses", FormMethod.Post))
{
    <input type="text" class="form-control" placeholder="Search" id="searchString" name="searchString">
    <input type="submit" value="Search">
}

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credits)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
